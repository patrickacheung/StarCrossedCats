<title>Welcome to our wonderful domain!</title>
<meta name="description" content="A desciption of our website and introduction.">
<%= stylesheet_link_tag('application') %>
<%= render(:partial => "default")%>

<%= error_messages_for(@user) %>
<section class="login_style">
  <div>
    <h2 class="Sign-Up_title">Sign-Up</h2>

    <%= form_for(:user, :url=> {:action => 'create'}) do |human| %>
    <p class="new_user_content"><b>Please fill in the following information:</b></p>
    <table class="new_user">
      <tr>
        <th><%= human.label(:name, "Name") %></th>
        <td><%= human.text_field(:name) %></td>
      </tr>
      <tr>
        <th><%= human.label(:username, "Username") %></th>
        <td><%= human.text_field(:username) %></td>
      </tr>
      <tr>
        <th><%= human.label(:password, "Password") %></th>
        <td><%= human.password_field(:password) %></td>
      </tr>
      <tr>
        <th><%= human.label(:password_confirmation, "Confirm Password") %></th>
        <td><%= human.password_field(:password_confirmation) %></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
      </tr>
      <tr>
        <th>   </th>
        <td><%= submit_tag("Sign Up")%></td>
      </tr>
    </table>



  <%end%>

  </div>
</section>
</div>
</body>
